@page
@model SignIn.Pages.SignInModel
@{
    ViewData["Title"] = "Sign in";
}

<h1>Sign In</h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="CheckUsr.Name">Name</label>
        <input type="text" asp-for="CheckUsr.Name" class="mr-5">
        <label asp-for="CheckUsr.Password">Password</label>
        <input type="password" asp-for="CheckUsr.Password" class="mr-5" />
        <label asp-for="CheckUsr.Mail">Mail</label>
        <input type="text" asp-for="CheckUsr.Mail" class="mr-5" />
        <button class="btn btn-primary">Login</button>
    </div>
</form>